#!/usr/bin/env bash

## example: ./bin/oag-all petstore

set -e

DIR=$(cd `dirname $0` && pwd)
BASE_DIR="${DIR}/.."

if [[ -f "${BASE_DIR}/venv/bin/python" ]]; then
  PYTHON="venv/bin/python"
else
  PYTHON="python3"
fi

pushd "${BASE_DIR}"
${PYTHON} -m coverage run -m unittest discover -s tests
${PYTHON} -m coverage html --omit=tests/*
popd
